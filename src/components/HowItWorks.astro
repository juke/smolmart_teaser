---
import { Image } from 'astro:assets';
import { Banana, Search, Palette, UserCircle2 } from 'lucide-react';
import { Badge } from "@/components/ui/badge";
---

<section id="how-it-works" class="relative py-16 pb-10 sm:py-0 sm:pb-32 w-full overflow-hidden">
  {/* Background gradient */}
  <div class="absolute inset-0 bg-gradient-to-b from-background via-background/95 to-background/90"></div>
  <div class="absolute inset-0 bg-gradient-to-t from-background via-transparent to-background/30"></div>
  <div class="absolute inset-0 bg-gradient-to-r from-background/30 via-transparent to-background/30"></div>

  <div class="max-w-6xl mx-auto px-4 sm:px-6 relative z-10">
    <!-- Section Title -->
    <div class="text-center mb-16 sm:mb-24">
      <h2 class="text-4xl sm:text-5xl font-black tracking-wider relative group animate-title-intro">
        <span class="relative block">
          <span class="animate-gradient bg-gradient-to-r from-[#FFB938] via-[#2EAE4E] via-[#1A7431] via-[#4ECB71] to-[#FFB938] bg-[length:400%_auto] bg-clip-text text-transparent drop-shadow-glow tracking-wide inline-block">
            How It Works
          </span>
        </span>
      </h2>
      <p class="mt-6 text-lg sm:text-xl text-[#FFE0B2]/90 tracking-wide">
        Turn Your Favorite Memes into Professional Art
      </p>
    </div>

    <!-- Steps Grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 sm:gap-12">
      <!-- Step 1: Browse & Discover -->
      <div class="group relative transform hover:-translate-y-1 transition-all duration-300 ease-out">
        <div class="relative bg-[#2C1810]/40 rounded-2xl p-6 backdrop-blur-sm border-2 border-[#8B4513]/20 hover:border-[#FFB938]/30 transition-all duration-500 hover:shadow-[0_0_30px_rgba(255,185,56,0.1)] overflow-hidden h-full">
          <div class="absolute inset-0 bg-gradient-to-b from-[#FFB938]/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
          <div class="relative z-10">
            <div class="w-12 h-12 rounded-xl bg-[#FFB938]/10 flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-500">
              <Search class="w-6 h-6 text-[#FFB938]" />
            </div>
            <h3 class="text-2xl font-bold text-[#FFB938] mb-4 tracking-wide">Browse & Discover</h3>
            <ul class="space-y-4 text-[#FFE0B2]/90 tracking-wide">
              <li class="flex items-start gap-3 group/item hover:text-[#FFE0B2] transition-colors duration-300">
                <div class="w-1.5 h-1.5 mt-2 rounded-full bg-[#FFB938]/50 group-hover/item:bg-[#FFB938] transition-colors duration-300"></div>
                <span>Browse viral memes and custom art</span>
              </li>
              <li class="flex items-start gap-3 group/item hover:text-[#FFE0B2] transition-colors duration-300">
                <div class="w-1.5 h-1.5 mt-2 rounded-full bg-[#FFB938]/50 group-hover/item:bg-[#FFB938] transition-colors duration-300"></div>
                <span>Vote and share your favorites</span>
              </li>
              <li class="flex items-start gap-3 group/item hover:text-[#FFE0B2] transition-colors duration-300">
                <div class="w-1.5 h-1.5 mt-2 rounded-full bg-[#FFB938]/50 group-hover/item:bg-[#FFB938] transition-colors duration-300"></div>
                <span>Earn rewards and exclusive perks</span>
              </li>
            </ul>
          </div>
        </div>
      </div>

      <!-- Step 2: Commission Art -->
      <div class="group relative">
        <div class="relative bg-[#2C1810]/40 rounded-2xl p-6 backdrop-blur-sm border-2 border-[#8B4513]/20 hover:border-[#4ECB71]/30 transition-all duration-500 hover:shadow-[0_0_30px_rgba(78,203,113,0.1)] overflow-hidden">
          <div class="absolute inset-0 bg-gradient-to-b from-[#4ECB71]/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
          <div class="relative z-10">
            <div class="w-12 h-12 rounded-xl bg-[#4ECB71]/10 flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-500">
              <Palette class="w-6 h-6 text-[#4ECB71]" />
            </div>
            <h3 class="text-2xl font-bold text-[#4ECB71] mb-4 tracking-wide">Commission Art</h3>
            <ul class="space-y-4 text-[#FFE0B2]/90 tracking-wide">
              <li class="flex items-start gap-3 group/item hover:text-[#FFE0B2] transition-colors duration-300">
                <div class="w-1.5 h-1.5 mt-2 rounded-full bg-[#4ECB71]/50 group-hover/item:bg-[#4ECB71] transition-colors duration-300"></div>
                <span>Connect with talented meme artists</span>
              <li class="flex items-start gap-3 group/item hover:text-[#FFE0B2] transition-colors duration-300">
                <div class="w-1.5 h-1.5 mt-2 rounded-full bg-[#4ECB71]/50 group-hover/item:bg-[#4ECB71] transition-colors duration-300"></div>
                <span>Transform meme ideas into art</span>
              </li>
              <li class="flex items-start gap-3 group/item hover:text-[#FFE0B2] transition-colors duration-300">
                <div class="w-1.5 h-1.5 mt-2 rounded-full bg-[#4ECB71]/50 group-hover/item:bg-[#4ECB71] transition-colors duration-300"></div>
                <span>Track your art's progress live</span>
              </li>
            </ul>
          </div>
        </div>
      </div>

      <!-- Step 3: Join as Artist -->
      <div class="group relative transform hover:-translate-y-1 transition-all duration-300 ease-out">
        <div class="relative bg-[#2C1810]/40 rounded-2xl p-6 backdrop-blur-sm border-2 border-[#8B4513]/20 hover:border-[#9F7AEA]/30 transition-all duration-500 hover:shadow-[0_0_30px_rgba(159,122,234,0.1)] overflow-hidden h-full">
          <div class="absolute inset-0 bg-gradient-to-b from-[#9F7AEA]/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
          <div class="relative z-10">
            <div class="w-12 h-12 rounded-xl bg-[#9F7AEA]/10 flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-500">
              <UserCircle2 class="w-6 h-6 text-[#9F7AEA]" />
            </div>
            <h3 class="text-2xl font-bold text-[#9F7AEA] mb-4 tracking-wide">Join as Artist</h3>
            <ul class="space-y-4 text-[#FFE0B2]/90 tracking-wide">
              <li class="flex items-start gap-3 group/item hover:text-[#FFE0B2] transition-colors duration-300">
                <div class="w-1.5 h-1.5 mt-2 rounded-full bg-[#9F7AEA]/50 group-hover/item:bg-[#9F7AEA] transition-colors duration-300"></div>
                <span>Build your meme art portfolio</span>
              </li>
              <li class="flex items-start gap-3 group/item hover:text-[#FFE0B2] transition-colors duration-300">
                <div class="w-1.5 h-1.5 mt-2 rounded-full bg-[#9F7AEA]/50 group-hover/item:bg-[#9F7AEA] transition-colors duration-300"></div>
                <span>Choose projects and set your rates</span>
              </li>
              <li class="flex items-start gap-3 group/item hover:text-[#FFE0B2] transition-colors duration-300">
                <div class="w-1.5 h-1.5 mt-2 rounded-full bg-[#9F7AEA]/50 group-hover/item:bg-[#9F7AEA] transition-colors duration-300"></div>
                <span>Climb the ranks with your <span class="inline-flex items-center gap-1"><Banana className="w-4 h-4 text-[#FFB938]" /> score</span></span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <!-- Community Features Badge -->
    <div class="mt-16 flex justify-center">
      <Badge variant="outline" className="gap-2 py-2 px-4 text-sm bg-black/60 backdrop-blur-sm border-2 border-[#8B4513]/20 text-[#FFE0B2]/90 transition-all duration-300 hover:border-[#FFB938]/30 hover:shadow-[0_0_20px_rgba(255,185,56,0.1)] rounded-full group">
        <Banana className="w-4 h-4 text-[#FFB938] group-hover:scale-110 group-hover:rotate-12 transition-all duration-300" />
        <span class="tracking-wide">Join the meme revolution - create, collect, earn</span>
      </Badge>
    </div>
  </div>
</section>

<style>
  /* Reuse existing animations from Hero component */
  .animate-gradient {
    animation: gradient 15s linear infinite;
    background-size: 400% auto;
    -webkit-background-clip: text;
    background-clip: text;
  }

  @keyframes gradient {
    0% { background-position: 0% 50%; }
    50% { background-position: 200% 50%; }
    100% { background-position: 0% 50%; }
  }

  .drop-shadow-glow {
    filter: drop-shadow(0 0 10px rgba(255, 185, 56, 0.15))
           drop-shadow(0 0 30px rgba(46, 174, 78, 0.1));
    text-shadow: 0 0 15px rgba(255, 185, 56, 0.05);
  }
</style>