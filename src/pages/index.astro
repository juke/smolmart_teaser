---
import Layout from '../layouts/Layout.astro';
import { BlurFade } from '../components/ui/blur-fade';
import { Palette, Gift, Diamond, Star, Rocket } from 'lucide-react';

// Welcome to Astro! Wondering what to do next? Check out the Astro documentation at https://docs.astro.build
// Don't want to use any of this? Delete everything in this file, the `assets`, `components`, and `layouts` directories, and start fresh.
---

<Layout title="Smolmart - Community Art Platform">
	<main>
		<!-- Hero Section -->
		<section class="relative min-h-screen flex items-center justify-center overflow-hidden bg-white dark:bg-neon-darkblue">
			<!-- Background effects -->
			<div class="absolute inset-0 z-0">
				<div class="absolute inset-0 dark:bg-[radial-gradient(70rem_50rem_at_top,theme(colors.neon.purple)/0.15,transparent)]"></div>
				<div class="absolute inset-0 dark:bg-[radial-gradient(50rem_50rem_at_bottom_right,theme(colors.neon.blue)/0.15,transparent)]"></div>
			</div>

			<!-- Floating elements -->
			<div class="absolute inset-0 z-0 overflow-hidden">
				<div class="absolute -left-4 top-1/4 h-72 w-72 rounded-full dark:bg-neon-purple/10 blur-3xl"></div>
				<div class="absolute right-0 top-1/3 h-64 w-64 rounded-full dark:bg-neon-blue/10 blur-3xl"></div>
			</div>

			<!-- Modal Backdrop -->
			<div id="modal-backdrop" class="fixed inset-0 bg-black/0 transition-all duration-300 -z-10 pointer-events-none"></div>

			<div class="container relative z-10 mx-auto px-4 py-32 sm:px-6 lg:px-8">
				<div class="mx-auto max-w-3xl text-center">
					<BlurFade client:load delay={0.2}>
						<div class="flex flex-col items-center gap-4">
							<div class="inline-flex items-center gap-2 rounded-full bg-neon-purple/10 px-4 py-1.5 text-sm font-medium text-neon-purple ring-1 ring-neon-purple/20">
								<Palette className="w-4 h-4" /> Early Access Coming Soon
							</div>
							<h1 class="bg-gradient-to-r from-neon-blue via-neon-purple to-neon-cyan bg-clip-text text-5xl font-bold tracking-tight text-transparent sm:text-7xl">
								Welcome to Smolmart
							</h1>
						</div>
					</BlurFade>
					
					<BlurFade client:load delay={0.4}>
						<p class="mt-8 text-lg leading-8 text-neon-gray">
							Your community-driven platform for discovering, commissioning, and sharing amazing artwork. Join our growing community of artists and art enthusiasts.
						</p>
					</BlurFade>
					
					<BlurFade client:load delay={0.6}>
						<div class="mt-12">
							<form id="waitlist-form" class="relative mx-auto max-w-md transition-all duration-300">
								<div class="group relative transition-all duration-300">
									<!-- Thank you message -->
									<div id="thank-you-message" class="absolute bottom-full left-0 right-0 mb-4 rounded-2xl bg-neon-darkblue/95 backdrop-blur-sm p-6 text-left shadow-xl opacity-0 -translate-y-2 transition-all duration-300 pointer-events-none ring-1 ring-neon-purple/20">
										<p class="text-sm text-neon-gray">
											Thank you for your interest! We'll notify you as soon as early access becomes available. Get ready to be part of something amazing! <Rocket className="inline-block w-4 h-4 ml-1" />
										</p>
									</div>

									<!-- Form inputs -->
									<div class="relative flex gap-x-4 transition-all duration-300 focus-within:scale-105 focus-within:translate-y-0 focus-within:shadow-2xl rounded-2xl p-2">
										<input
											id="email-address"
											name="email"
											type="email"
											autocomplete="email"
											required
											class="peer min-w-0 flex-1 rounded-xl border-0 bg-neon-darkblue/90 px-6 py-3.5 text-neon-white placeholder:text-neon-gray/70 shadow-[0_0_15px_rgba(153,51,255,0.1)] ring-1 ring-inset ring-neon-purple/20 transition-all duration-300 focus:bg-neon-darkblue focus:shadow-[0_0_20px_rgba(153,51,255,0.2)] focus:ring-neon-purple/30 sm:text-sm sm:leading-6"
											placeholder="Enter your email"
										/>
										<button
											type="submit"
											class="flex-none rounded-xl bg-neon-purple/10 px-6 py-3.5 text-sm font-semibold text-neon-white shadow-[0_0_15px_rgba(153,51,255,0.15)] ring-1 ring-neon-purple/20 transition-all duration-500 hover:scale-105 hover:bg-neon-purple/20 hover:shadow-[0_0_20px_rgba(153,51,255,0.3)] hover:ring-neon-purple/40 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-neon-purple"
										>
											Join Waitlist
										</button>
									</div>
								</div>
								<div class="mt-3 text-sm text-center">
									<p class="text-neon-gray">
										Be among the first to get access when we launch! <Rocket className="inline-block w-4 h-4 ml-1" />
									</p>
								</div>
							</form>
						</div>
					</BlurFade>

					<!-- Launch Perks -->
					<BlurFade client:load delay={0.8}>
						<div class="mt-16 grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
							<!-- Early Bird Card -->
							<div class="group relative rounded-2xl bg-neon-darkblue/80 p-8 ring-1 ring-neon-purple/20 transition-all duration-500 hover:scale-[1.02] hover:bg-neon-darkblue/90 backdrop-blur-sm">
								<div class="absolute inset-0 rounded-2xl bg-gradient-to-b from-neon-purple/10 to-transparent opacity-0 transition-opacity duration-500 group-hover:opacity-100"></div>
								<div class="relative flex flex-col items-center gap-6">
									<div class="rounded-xl bg-neon-purple/10 p-3 ring-1 ring-neon-purple/20 transition-all duration-500 group-hover:bg-neon-purple/20 group-hover:ring-neon-purple/30">
										<Gift className="w-8 h-8 text-neon-purple transition-transform duration-500 group-hover:scale-110" />
									</div>
									<div class="text-center">
										<h3 class="text-xl font-semibold text-neon-white">Early Bird Perks</h3>
										<p class="mt-2 text-sm text-neon-gray">Special benefits for our first members</p>
									</div>
								</div>
							</div>

							<!-- Exclusive Access Card -->
							<div class="group relative rounded-2xl bg-neon-darkblue/80 p-8 ring-1 ring-neon-purple/20 transition-all duration-500 hover:scale-[1.02] hover:bg-neon-darkblue/90 backdrop-blur-sm">
								<div class="absolute inset-0 rounded-2xl bg-gradient-to-b from-neon-purple/10 to-transparent opacity-0 transition-opacity duration-500 group-hover:opacity-100"></div>
								<div class="relative flex flex-col items-center gap-6">
									<div class="rounded-xl bg-neon-purple/10 p-3 ring-1 ring-neon-purple/20 transition-all duration-500 group-hover:bg-neon-purple/20 group-hover:ring-neon-purple/30">
										<Diamond className="w-8 h-8 text-neon-purple transition-transform duration-500 group-hover:scale-110" />
									</div>
									<div class="text-center">
										<h3 class="text-xl font-semibold text-neon-white">Exclusive Access</h3>
										<p class="mt-2 text-sm text-neon-gray">First access to new features</p>
									</div>
								</div>
							</div>

							<!-- Founding Member Card -->
							<div class="group relative rounded-2xl bg-neon-darkblue/80 p-8 ring-1 ring-neon-purple/20 transition-all duration-500 hover:scale-[1.02] hover:bg-neon-darkblue/90 backdrop-blur-sm sm:col-span-2 lg:col-span-1">
								<div class="absolute inset-0 rounded-2xl bg-gradient-to-b from-neon-purple/10 to-transparent opacity-0 transition-opacity duration-500 group-hover:opacity-100"></div>
								<div class="relative flex flex-col items-center gap-6">
									<div class="rounded-xl bg-neon-purple/10 p-3 ring-1 ring-neon-purple/20 transition-all duration-500 group-hover:bg-neon-purple/20 group-hover:ring-neon-purple/30">
										<Star className="w-8 h-8 text-neon-purple transition-transform duration-500 group-hover:scale-110" />
									</div>
									<div class="text-center">
										<h3 class="text-xl font-semibold text-neon-white">Founding Member</h3>
										<p class="mt-2 text-sm text-neon-gray">Special founding member badge</p>
									</div>
								</div>
							</div>
						</div>
					</BlurFade>
				</div>
			</div>
		</section>
	</main>
</Layout>

<style>
	.bg-grid-black {
		background-size: 40px 40px;
		background-image: linear-gradient(to right, rgb(0 0 0 / 0.1) 1px, transparent 1px),
			linear-gradient(to bottom, rgb(0 0 0 / 0.1) 1px, transparent 1px);
	}
	.bg-grid-white {
		background-size: 40px 40px;
		background-image: linear-gradient(to right, rgb(255 255 255 / 0.1) 1px, transparent 1px),
			linear-gradient(to bottom, rgb(255 255 255 / 0.1) 1px, transparent 1px);
	}

	#waitlist-form:focus-within #thank-you-message {
		@apply opacity-100 translate-y-0;
	}

	#waitlist-form:focus-within {
		@apply z-30;
	}

	/* Backdrop styles */
	#modal-backdrop {
		@apply fixed inset-0 bg-black/0 transition-all duration-300 -z-10 pointer-events-none;
	}

	#waitlist-form:focus-within ~ #modal-backdrop {
		@apply bg-black/60 z-20;
	}
</style>

<script>
	const form = document.getElementById('waitlist-form');
	const modalBackdrop = document.getElementById('modal-backdrop');

	form?.addEventListener('focusin', () => {
		modalBackdrop?.classList.add('bg-black/40', 'z-20');
		document.body.classList.add('overflow-hidden');
	});

	form?.addEventListener('focusout', (e: FocusEvent) => {
		// Check if the new focus target is still within the form
		if (!form.contains(e.relatedTarget as Node)) {
			modalBackdrop?.classList.remove('bg-black/40', 'z-20');
			document.body.classList.remove('overflow-hidden');
		}
	});
</script>
